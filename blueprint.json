{
  "schema": {
    "type": "app_blueprint",
    "version": {
      "major": 0,
      "minor": 1
    },
    "origin": "Engines Developer Studio 0.2"
  },
  "metadata": {
    "blueprint": {
      "version": {
        "major": 0,
        "minor": 0,
        "level": "alpha",
        "patch": 0
      }
    },
    "timestamp": "2018-05-01T11:36:01+10:00"
  },
  "software": {
    "base": {
      "name": "eportal",
      "framework": "sinatra",
      "deployment_type": "web",
      "http_protocol": "https_and_http",
      "framework_port_override": 3000,
      "continuous_deployment": true,
      "memory": {
        "required": 96,
        "recommended": 128
      }
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#!/bin/bash\r\n\r\ncd /home/app\r\ngit pull\r\nbundle --standalone\r\nbundle exec thin start"
      },
      "install": {
        "language": "sh",
        "content": "#!/bin/bash\r\n\r\nmkdir /home/app/public\r\ntouch   /home/app/public/r"
      }
    },
    "installed_packages": [
      {
        "name": "engines_portal",
        "source_url": "https://github.com/lachdoug/engines_portal.git",
        "destination": "./",
        "extraction_command": "git",
        "path_to_extracted": "engines_portal"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "public",
          "volume_src": "",
          "engine_path": "",
          "permissions": "ro",
          "user": "_Engines_Builder(data_uid)",
          "group": "_Engines_Builder(data_gid)"
        }
      }
    ],
    "environment_variables": [
      {
        "name": "ENGINES_USER_PORTAL_SYSTEM_IP",
        "mandatory": true,
        "ask_at_build_time": true,
        "input": {
          "type": "string",
          "label": "Engines Host"
        }
      }
    ],
    "persistent_directories": [
      {
        "path": "app/public",
        "volume_name": "public"
      }
    ]
  }
}
